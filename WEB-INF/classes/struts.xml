<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
		
		
		<action name="register" class="RegisterClass" method="registration">   
			<result name="User Registered">/login.jsp</result>
			<result name="Registration Failed">/RegFailed.html</result>
		</action>     
		
	
        <action name="login" class="LoginClass" method="Login">
            <result name="Success" type="redirect">/viewProfile.action</result>
            <result name="Failure">/login.jsp</result>
        </action>		

		<action name="logoff" class="Logout" method="logoff">
			<result name="success">/login.jsp</result>
		</action>
		
		<action name="viewProfile" class="ProfileClass" method="viewProfile">
			<result name="success">/profile.jsp</result>
			<result name="error">/login.jsp</result>
		</action>
		
		
        <action name="viewAllUsers" class="ViewUsers" method="viewusers">
            <result name="success">/users.jsp</result>
            <result name="error">/login.jsp</result>
        </action>
        

        
        <action name="addItem" class="AddItem" method="addItem">
            <result name="Success" type="redirect">/viewItems.action</result>
            <result name="Failure">/addItem.jsp</result>
        </action>
        


        <action name="viewItems" class="ViewItems" method="viewItems">
            <result name="Success">/items.jsp</result>
            <result name="Failure">/login.jsp</result>
        </action>


        
        <action name="viewItemDetails" class="ItemBids" method="itemDetails">
            <result name="Success">/itemDetails.jsp</result>
            <result name="Failure">/login.jsp</result>
        </action>
        
        
        <action name="placeBid" class="PlaceBid" method="placeBid">
            <result name="Success" type="redirect">/viewItems.action</result>
            <result name="Failure" type="redirect">/viewItems.action</result>
        </action>


        
        <action name="viewMyBids" class="MyBids" method="mybids">
            <result name="Success">/myBids.jsp</result>
            <result name="Failure">/login.jsp</result>
        </action>
	


    </package>
</struts>